generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model User {
  id          Int      @id @default(autoincrement())
  firstName   String
  lastName    String
  email       String   @unique
  password    String
  role        Role
  gender      Gender
  tc_no       String   @unique
  joined_at   DateTime @default(now())
  address     String
  phoneNumber String
  birthDate   DateTime

  notifySms   Boolean @default(true)
  notifyEmail Boolean @default(true)
  notifyApp   Boolean @default(true)

  emergencyName     String?
  emergencyPhone    String?
  emergencyRelation String?

  Patient   Patient?
  Doctor    Doctor?
  Secretary Secretary?
}

enum Gender {
  male
  female
}

enum Role {
  doctor
  patient
  secretary
}

enum AppointmenStatus {
  pending
  confirmed
  completed
  cancelled
}

enum AppointmentType {
  standard
  emergency
}

model Patient {
  id           Int           @id @default(autoincrement())
  userId       Int           @unique
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  appointments Appointment[]
  doctor       Doctor?       @relation(fields: [doctorId], references: [id])
  doctorId     Int?
}

model Doctor {
  id           Int           @id @default(autoincrement())
  speciality   String
  userId       Int           @unique
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  appointments Appointment[]
  clinic       Clinic?       @relation(fields: [clinicId], references: [id], onDelete: SetDefault)
  clinicId     Int?
  examinations Examination[]
  patients     Patient[]

  workingDays         String @default("1,2,3,4,5")
  workingHourStart    String @default("09:00")
  workingHourEnd      String @default("17:00")
  appointmentDuration Int    @default(15)
  dailySlots          String @default("")
}

model Secretary {
  id           Int           @id @default(autoincrement())
  userId       Int           @unique
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  appointments Appointment[]
  clinics      Clinic[]      @relation("SecretaryClinic")
}

model Appointment {
  id          Int              @id @default(autoincrement())
  patientId   Int
  doctorId    Int
  date        DateTime
  status      AppointmenStatus
  type        AppointmentType  @default(standard)
  patient     Patient          @relation(fields: [patientId], references: [id], onDelete: Cascade)
  doctor      Doctor           @relation(fields: [doctorId], references: [id], onDelete: Cascade)
  secretary   Secretary?       @relation(fields: [secretaryId], references: [id], onDelete: SetNull)
  secretaryId Int?
  examination Examination?
}

model Examination {
  id            Int         @id @default(autoincrement())
  appointmentId Int         @unique
  diagnosis     String
  doctorId      Int
  doctor        Doctor      @relation(fields: [doctorId], references: [id], onDelete: Cascade)
  treatment     String
  notes         String
  isHidden      Boolean     @default(false)
  appointment   Appointment @relation(fields: [appointmentId], references: [id], onDelete: Cascade)
}

model Clinic {
  id        Int         @id @default(autoincrement())
  name      String
  address   String
  secretary Secretary[] @relation("SecretaryClinic")
  doctors   Doctor[]
}
